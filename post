			if ($_POST['btnAdd'])
			{

			require_once 'scriptDBAccess.php';

			$db_server = mysql_connect($db_hostname, $db_username, $db_password);

			if (!$db_server) die('Oh crap... ' . mysql_error());
			if ($db_server) echo 'Awesome!';

