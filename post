			$defPib = $_POST['txtDefPib'];

			$stationFile = fopen("firmchip.txt", "w") or die("Uh-oh. Houston we have a complication...");
			
			$logText = 'FRMID=' . $id . PHP_EOL . 'PIBID='. $pibId . PHP_EOL . 'firmware_version='. $frm . PHP_EOL . 'firmware_path='. $frmPth . PHP_EOL . 'GN_IC=' . $gnIc . PHP_EOL . 'DUT_IC=' . $dutIc . 'GN_Device='. $gnDv . PHP_EOL . 'DUT_Device='. $dutDv . PHP_EOL . 'firmware_IC=' . $frmIc . PHP_EOL . 'Default_pib=' . $defPib;

